?>
<?php $selector = 'alo-content-'. uniqid(); ?>
<div class= "<?php /* @escapeNotVerified */ echo $selector?> recentorder suggest-slider autoplay" data-autoplay="false">
	<div class="notify-slider-wrapper content-products"       
	>
	<?php
